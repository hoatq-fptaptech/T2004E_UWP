<Page
    x:Class="UWP.Pages.DemoFetchApi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP.Pages"
    xmlns:models="using:UWP.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListView x:ConnectionId='2' x:Name="MNItems">
            <ListView.ItemTemplate>
                <DataTemplate                         >
                    <ListViewItem x:ConnectionId='4'>
                        <RelativePanel>
                            <Image x:ConnectionId='5' x:Name="imgIcon"                        Width="50" Height="50" Margin="10"/>
                            <TextBlock x:ConnectionId='6' RelativePanel.RightOf="imgIcon" Margin="0,20,0,0"                      FontSize="24"/>
                        </RelativePanel>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

